<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
  version="3.0"
  metadata-complete="true">  

    <description>
      Dynamide Servlet.
    </description>
    <display-name>Dynamide Servlet</display-name>

    <servlet>
      <servlet-name>DynamideServlet</servlet-name>
      <servlet-class>com.dynamide.DynamideServlet</servlet-class>
       <init-param>
            <param-name>DYNAMIDE_RESOURCE_ROOT</param-name>
            <param-value>${DYNAMIDE_RESOURCE_ROOT}</param-value>
      </init-param>
      <init-param>
            <param-name>DYNAMIDE_STATIC_ROOT</param-name>
            <param-value>${DYNAMIDE_STATIC_ROOT}</param-value>
      </init-param>
      <init-param>
            <param-name>DYNAMIDE_CONTEXT_CONF</param-name>
            <param-value>${DYNAMIDE_CONTEXT_CONF}</param-value>
      </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>DynamideServlet</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>
</web-app>
